# ─── FinanceTracker Environment Variables ─────────────────────────
# Copy this file to .env and fill in your values

# Django secret key (generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
SECRET_KEY=your-very-secret-key-here-change-this

# Debug mode (False in production)
DEBUG=True

# Allowed hosts (comma separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (default: SQLite)
DB_NAME=db.sqlite3

# Email configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@financetracker.com
